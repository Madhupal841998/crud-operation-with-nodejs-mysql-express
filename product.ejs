<!DOCTYPE html>
<html lang="en">

<head>
    <title>Document</title>
</head>

<body>
    <h1> Product List</h1>
    <table border="1" width="100%">
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Category Name</th>
            <th>Category ID</th>
            <th>Actions</th>
        </tr>
        <% if(product.length> 0){ %>
            <% for(var i=0;i<product.length;i++){ %>
                <tr>
                    <td>
                        <%- product[i].productId %>
                    </td>
                    <td>
                        <%- product[i].productName %>
                    </td>
                    <td>
                        <%- product[i].categoryName %>
                    </td>
                    <td>
                        <%- product[i].categoryId %>
                    </td>
                    <td><a href="/delete-product?productId=<%- product[i].productId %>">Delete</a>
                        <a href="/update-product?productId=<%- product[i].productId %>">Update</a>
                    </td>
                </tr>

                <% } %>
                    <% }else{ %>
                        <h1>Data Not Found</h1>

                        <% } %>
    </table>
   <div>

    <% if(page > 1) { %> <a href="/product?page=<%=page-1%>">Before</a> <% } %>
    <% for(let i = iterator; i <= endingLink; i++) { %>
        <% if(i === page) { %>
        <a class="selectedLink" href="/product?page=<%=i%>"><%=i%></a>
        <% continue; %>
    <% } %>
        <a href="/product?page=<%=i%>"><%=i%></a>
        <% } %>
        <% if(page < numberOfPages) { %> <a href="/product?page=<%=page+1%>">After</a> <% } %>
    </div>
        <a href="http://127.0.0.1:2000/">Return</a>

</body>

</html>
